<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Liste des activit√©s{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        <link rel="stylesheet" 
        href="{{ asset('bundles/followme/node_modules/bootstrap/dist/css/bootstrap.css') }}">
        
    </head>
    <body>     
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('main') }}">Follow me</a>
                </div>
                    <ul class="nav navbar-nav navbar-right">
                    {% if app.session.get('id') %}
                        <li><a href="{{ path('signout') }}">{{ "sign.out"|trans|capitalize }}</a></li>
                         <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                {{ "activity"|trans|capitalize }}
                                <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('dating') }}">{{ "dating"|trans|capitalize }}</a></li>
                                <li><a href="{{ path('add') }}">{{ "add.btn"|trans|capitalize }}</a></li>
                                 {% if is_granted('ROLE_SUPER_ADMIN', 'ROLE_ADMIN') %}
                                <li><a href="{{ path('admin') }}">{{ "Admin" }}</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    {% else %}
                        <li><a href="{{ path('signin') }}">{{ "sign.in"|trans|capitalize }}</a></li>
                        <li><a href="{{ path('signup') }}">{{ "sign.up"|trans|capitalize }}</a></li>
                    {% endif %}
                    </ul>
            </div>
        </nav>
	        {% block body %}{% endblock %}
	    
	        {% block javascripts %}{% endblock %}
	        
	        <script type="text/javascript" 
	        src="{{ asset('bundles/followme/node_modules/jquery/dist/jquery.js') }}"></script>
	        
    		<script type="text/javascript" 
    		src="{{ asset('bundles/followme/node_modules/bootstrap/dist/js/bootstrap.js') }}"></script>
	    </body>
</html>